<%= form_for @book do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :release_date %>
        <%= f.date_field :release_date, class: "form-control", max: Date.today.to_s %>
    </div>

    <div class="form-group">
        <%= f.label :author_id %>
        <%= f.collection_select :author_id, Author.all, :id, :name, { prompt: "Select an author" }, class: "form-control" %>
    </div>

    <%= f.submit "Create Book", class: "btn btn-primary" %>
    <%= link_to "Back to List", books_path, class: "btn btn-secondary" %>
<% end %>

